<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/main.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/treemenu.css" rel="stylesheet" />
    <script src="~/Scripts/diffcolorlist.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" media="screen" type="text/css" />
    <link href="~/Content/diffcolorlist.css" rel="stylesheet" />
</head>
<body id="mainbody">
    <div id="page">
        <div id="header">            
            <div id="nav">
                @RenderSection("nav", required: false)
            </div>
            <div id="headinfo">
                <span id="uid" hidden="hidden" style="visibility:hidden">@ViewBag.Id</span>
                <span id="guid" hidden="hidden" style="visibility:hidden">@ViewBag.Guid</span>
                <span id="greet">您好, @ViewBag.Ename</span>
                <span id="timeshow"></span>
                <span id="logout"><a href="~/Login/LogOut">退出</a></span>
            </div>
        </div>
        <div id="main">
            <div id="content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/Scripts/treemenu.js"></script>
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/ajax.js"></script>
    <script src="~/Scripts/docready.js"></script>
    <script src="~/Scripts/laydate/laydate.js"></script>
    @Scripts.Render("~/Scripts/ueditor/ueditor.config.js", "~/Scripts/ueditor/ueditor.all.js", "~/Scripts/ueditor/lang/zh-cn/zh-cn.js")
    <script type="text/javascript" charset="utf-8">
        var editorOption = {
            initialContent: "",
            initialFrameWidth: 700,
            initialFrameHeight: 400
        };
        var editor = new baidu.editor.ui.Editor(editorOption);
        //editor.render('editor');
    </script>
    <link href="~/Content/detailInputStyle.css" rel="stylesheet" />
</body>
</html>
