@model IEnumerable<UDS.Models.AgencyList>

<div>
    <div>
        <ul style="list-style:none; width:100%; min-width:600px;">
            <li style="width:20%; float:left; text-align:center">代理人</li>
            <li style="width:30%; float:left; text-align:center">开始时间</li>
            <li style="width:30%; float:left; text-align:center">结束时间</li>
            <li style="width:15%; float:left; text-align:center"></li>
        </ul>
        <br />
        <div>
            @foreach (var item in Model)
            {
                <ul style="list-style:none; width:100%; min-width:600px;">
                    <li style="width:20%; float:left; text-align:center">
                        @Html.DisplayFor(modelItem => item.AgentName)
                    </li>
                    <li style="width:30%; float:left; text-align:center">
                        @Html.DisplayFor(modelItem => item.BeginTime)
                    </li>
                    <li style="width:30%; float:left; text-align:center">
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </li>
                    <li style="width:15%; float:left; text-align:center">
                        @if (item.EndTime.CompareTo(DateTime.Now.ToString("yyyy-MM-dd HH:mm")) > 0)
                        {
                            @Ajax.ActionLink("停止", "StopAuth", "Agent", new { id = item.Id }, new AjaxOptions() { UpdateTargetId = "replace", InsertionMode = InsertionMode.Replace, HttpMethod = "Post" })
                        }
                    </li>
                </ul>
                <br />
            }
        </div>
    </div>
</div>