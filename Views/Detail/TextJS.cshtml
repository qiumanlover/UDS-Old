@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TextJS</title>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/laydate/laydate.js"></script>

</head>
<body>
    <div style="text-align:center; width:100%" class="inline layinput">
        <input onclick="laydate({ istime: true, formate: 'YYYY-MM-DD hh:mm:ss' })" placeholder="YYYY-MM-DD hh:mm:ss" class="laydate-icon-molv" />
    </div>

    <div>
        <input id="hello" class="laydate-icon" onclick="laydate({ istime: true, formate: 'YYYY-MM-DD hh:mm:ss' })">
        <script>
            laydate({
                elem: '#hello', //目标元素。由于laydate.js封装了一个轻量级的选择器引擎，因此elem还允许你传入class、tag但必须按照这种方式 '#id .class'
                event: 'focus' //响应事件。如果没有传入event，则按照默认的click
            });
        </script>
    </div>

    <div>
        <input id="TotalTime" name="TotalTime" onclick="totaltime()" />
    </div>
</body>
</html>
