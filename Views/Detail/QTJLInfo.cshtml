@model UDS.Models.QTJLInfo

@using (Ajax.BeginForm("QTJLInfo", new { id = ViewBag.Id, isOld = ViewBag.Old }, new AjaxOptions() { UpdateTargetId = "replace", HttpMethod = "Post", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table style="width:100%">
        <tr>
            <td style="width:40%" align="right">出访人：</td>
            <td style="width:60%">
                @Html.DropDownListFor(model => model.VisitorId, ViewData["typelist"] as List<SelectListItem>)
                @Html.ValidationMessageFor(model => model.VisitorId)
            </td>
        </tr>
        <tr>
            <td style="width:40%" align="right">出访对象：</td>
            <td style="width:60%">
                @Html.TextBoxFor(model => model.BeVisitor)
                @Html.ValidationMessageFor(model => model.BeVisitor)
            </td>
        </tr>
        <tr>
            <td style="width:40%" align="right">出访性质：</td>
            <td style="width:60%">
                @Html.TextBoxFor(model => model.Property)
                @Html.ValidationMessageFor(model => model.Property)
            </td>
        </tr>
       <tr>
            <td style="width:40%" align="right">开始时间：</td>
            <td style="width:60%">
                @Html.TextBoxFor(model => model.BeginTime, new { onclick = "laydate({ istime: true, min : laydate.now(), format: 'YYYY-MM-DD hh:mm:ss', start : laydate.now() })", placeholder = "YYYY-MM-DD hh:mm:ss", Class = "laydate-icon-molv" })
                @Html.ValidationMessageFor(model => model.BeginTime)
            </td>
        </tr>
        <tr>
            <td style="width:40%" align="right">结束时间：</td>
            <td style="width:60%">
                @Html.TextBoxFor(model => model.EndTime, new { onclick = "laydate({ istime: true, format: 'YYYY-MM-DD hh:mm:ss', start : laydate.now() })", placeholder = "YYYY-MM-DD hh:mm:ss", Class = "laydate-icon-molv" })
                @Html.ValidationMessageFor(model => model.EndTime)
            </td>
        </tr>
        <tr>
            <td style="width:40%" align="right">出访记录：</td>
            <td style="width:60%">
                @Html.TextAreaFor(model => model.AttachContent)
                @Html.ValidationMessageFor(model => model.AttachContent)
            </td>
        </tr>
    </table>
    if (ViewBag.Display == 1)
    {
        <script src="~/Scripts/jquery-1.8.2.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
        <div style="width:100%; text-align:center">
            <input type="submit" value="保存" id="save" name="save" />
            <input type="submit" value="发送" id="send" name="send" />
        </div>
    }
}