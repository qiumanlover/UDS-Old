    ViewBag.Title = "Index";
}
<div style="width:400px; margin:auto;margin-top:200px">
    <form method="post" action="~/Login/LoginCheck">
        用户名：<input type="text" id="username" name="username" value="@(ViewBag.Username)" />
        <br />
        密  码：<input type="password" id="password" name="password" value="@(ViewBag.Password)" />
        <br />
        <input type="submit" id="submit" value="提交" style="width:150px; height:30px" />
        <br />
        <div><label id="msg">@ViewBag.Msg</label></div>
    </form>
</div>
