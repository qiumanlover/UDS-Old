<div style="text-align:center; margin-top:100px; width:70%">
    <script src="~/Scripts/hxmd5.js"></script>
    @using (Ajax.BeginForm("ModifyPass", new AjaxOptions() { HttpMethod = "Post", UpdateTargetId = "replace", InsertionMode = InsertionMode.Replace }))
    {
        <ul style="list-style:none">
            <li>
                <input type="text" id="pass1" name="pass1" value="当前密码" />
                <input type="password" id="curpass" name="curpass"  value="@ViewBag.CurPass" style="display:none" />
            </li>
            <li>
                <input type="text" id="pass2" name="pass2" value="新密码" />
                <input type="password" id="newpass" name="newpass" value="@ViewBag.NewPass" style=" display:none" />
            </li>
            <li>
                <input type="text" id="pass3" name="pass3" value="确认密码" />
                <input type="password" id="newpass2" name="newpass2" value="@ViewBag.NewPass2" style="display:none" />
            </li>
            <li>
                <input type="submit" id="submit" name="submit" value="确认修改" style="width:15%" />
            </li>
            <li><label id="msg">@ViewBag.Msg</label></li>
        </ul>
    }
    <script type="text/javascript">
        $("input#pass1").focus(1000, function () {
            var text_val = $(this).val();
            if (text_val == "当前密码") {
                $(this).hide();
                $("input#curpass").show().focus();
            }
        });
        $("input#curpass").focusout(function () {
            var text_val = $(this).val();
            if (text_val == "") {
                $(this).hide();
                $("input#pass1").show();
            }
        });

        $("input#pass2").focus(1000, function () {
            var text_val = $(this).val();
            if (text_val == "新密码") {
                $(this).hide();
                $("input#newpass").show().focus();
            }
        });
        $("input#newpass").focusout(function () {
            var text_val = $(this).val();
            if (text_val == "") {
                $(this).hide();
                $("input#pass2").show();
            }
        });

        $("input#pass3").focus(1000, function () {
            var text_val = $(this).val();
            if (text_val == "确认密码") {
                $(this).hide();
                $("input#newpass2").show().focus();
            }
        });
        $("input#newpass2").focusout(function () {
            var text_val = $(this).val();
            if (text_val == "") {
                $(this).hide();
                $("input#pass3").show();
            }
        });
        $("input#newpass2").keyup(function () {

        });
        $("input#submit").click(function () {
            $("input#curpass").val(hex_md5($("input#curpass").val().toString()));
            $("input#newpass").val(hex_md5($("input#newpass").val().toString()));
            $("input#newpass2").val(hex_md5($("input#newpass2").val().toString()));
        })
    </script>
</div>